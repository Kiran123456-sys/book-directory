<%-include("partials/header", {page: "Books"})-%>

<div class="row gx-4 gy-4">
    <% books.forEach(function(book){ %>
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= book.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted">- <%= book.author.first_name %> <%= book.author.last_name %> (<%= book.author.age %>)</h6>
                    <p class="card-text blah">
                        Published on: <%= book.published.toLocaleDateString() %>
                        <br>
                        Quantity: <%= book.quantity %>
                    </p>
                </div>
            </div>
        </div>
    <% }) %>
    <% if (books.length == 0) { %>
        <h3>No Books to display</h3>
    <% } %>
</div>

<%-include("partials/footer")-%>